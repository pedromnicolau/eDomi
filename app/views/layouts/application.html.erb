<!DOCTYPE html>
<html>
  <head>
    <!-- ...existing code... -->
    <title>eDomi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-..." crossorigin="anonymous">

    <%= vite_client_tag %>
    <%= vite_javascript_tag 'application' %>

    <!-- estilos mínimos para flash overlay e espaço para navbar -->
    <style>
      /* reserva espaço no topo para a navbar do SPA (ajuste se necessário) */

      /* container fixo para as flash messages (não empurram conteúdo) */
      .app-flash {
        position: fixed;
        top: 8px;
        left: 0;
        right: 0;
        display: flex;
        justify-content: center;
        z-index: 1080; /* acima do conteúdo */
        pointer-events: none; /* deixa o clique passar, os alerts individuais permitem clique */
      }
      .app-flash .alert {
        pointer-events: auto;
        min-width: 280px;
        max-width: 900px;
        margin: 0 1rem;
      }
    </style>
  </head>
  <body>
    <!-- Mount point do SPA (colocado antes do yield para que o Navbar seja renderizado acima dos forms server-rendered) -->
    <div id="app"></div>

    <!-- Flash messages: overlay fixo para não alterar o fluxo da página -->
    <div class="app-flash" aria-live="polite" aria-atomic="true">
      <% flash.each do |k, v| %>
        <div class="alert alert-<%= k == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
          <%= v %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    </div>
    <!-- Bootstrap JS (opcional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>

    <!-- ...existing code... -->
  </body>
</html>