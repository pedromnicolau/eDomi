<h1><%= @property.title %></h1>
<p><%= @property.description %></p>
<p>R$ <%= number_to_currency(@property.price, unit: "", separator: ",", delimiter: ".") %></p>
<p><%= @property.city %> - <%= @property.state %></p>

<% if user_signed_in? && current_user.buyer? %>
  <%= link_to "Agendar visita", new_property_visit_path(@property) %>
<% end %>

<h3>Fotos</h3>
<% @property.property_photos.each do |photo| %>
  <%= image_tag photo.image.variant(resize_to_limit: [400, 300]) %>
<% end %>
