<div class="container py-4 page-section">
  <div class="page-hero">
    <h1>Meu Perfil</h1>
    <p class="lead">Atualize suas informações de conta e senha.</p>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="page-card">
        <%# mostra erros do Devise se houver %>
        <%= devise_error_messages! %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Nova senha (deixe em branco para manter a atual)", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmação da nova senha", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :current_password, "Senha atual (obrigatória para confirmar alterações)", class: "form-label" %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit "Atualizar", class: "btn btn-primary" %>
            <%= link_to "Cancelar", root_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>

        <hr class="my-4">

        <h6 class="text-muted">Excluir conta</h6>
        <p class="text-muted small">Ao excluir sua conta, seus dados serão removidos conforme nossa política de privacidade.</p>
        <%= button_to "Excluir minha conta", registration_path(resource_name), method: :delete, data: { confirm: "Tem certeza que deseja excluir sua conta? Esta ação não pode ser desfeita." }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
