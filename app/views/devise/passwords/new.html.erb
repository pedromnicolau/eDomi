<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="card-title mb-3">Recuperar senha</h3>

        <p class="text-muted small mb-3">Informe seu e-mail e enviaremos instruções para redefinir a senha.</p>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <%= f.submit "Enviar instruções", class: "btn btn-primary" %>
            <%= link_to "Voltar para login", new_session_path(resource_name), class: "small" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
